{
	"compilerOptions": {
		"target": "esnext",
		"lib": ["esnext"],
		"module": "commonjs",
		"moduleResolution": "node",
		"sourceMap": true,
		"strict": true,
		"outDir": "out",
		"rootDir": "src",
		"types": ["node", "jest"],
		"skipLibCheck": true
	},
	"include": ["src"],
	"exclude": ["node_modules", ".vscode-test"]
}